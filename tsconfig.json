{
  "compileOnSave": false,
  "compilerOptions": {
    "pretty": true,
    "declarationDir": "./dist",
    "sourceRoot": "./src/",
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "allowJs": false
  },
  "exclude": [
    "coverage",
    "node_modules",
    "dist/",
    "tests/"
  ]
}
